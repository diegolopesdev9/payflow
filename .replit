modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start:prod"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Start App"

[[workflows.workflow]]
name = "Full Stack App"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm start"
waitForPort = 5000

[[workflows.workflow]]
name = "Development"
author = "agent"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server/dev.ts"

[[workflows.workflow]]
name = "Start App"
author = 47643903
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx server/dev.ts"

[[workflows.workflow]]
name = "Production Test"
author = 47643903
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:prod"

[[workflows.workflow]]
name = "Run Tests"
author = 47643903
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test:run"

[agent]
expertMode = true
