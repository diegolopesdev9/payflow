datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")   // pooler 6543 + pgbouncer=true
  directUrl  = env("DIRECT_URL")     // session pooler 5432
  schemas    = ["public", "auth"]    // ðŸ‘ˆ obrigatÃ³rio por causa do auth.users
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  createdAt  DateTime @default(now())
}